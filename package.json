{
  "name": "@webcrypto/storage",
  "version": "1.0.0",
  "private": false,
  "description": "A set of tools to facilitate and give good defaults for use of the native Web Crypto API.",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "crypto",
    "store",
    "storage",
    "indexdb",
    "cryptography",
    "keyval",
    "security",
    "key val",
    "idb"
  ],
  "main": "dist/web-crypto-storage.cjs.js",
  "browser": "dist/web-crypto-storage.umd.js",
  "module": "dist/web-crypto-storage.module.js",
  "es2015": "dist/web-crypto-storage.es2015.js",
  "typings": "dist/web-crypto-storage.d.ts",
  "files": [
    "dist"
  ],
  "author": "William Grasel <d.rufos@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/willgm/web-crypto-storage.git"
  },
  "homepage": "https://willgm.github.io/web-crypto-storage/",
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "start": "run-p start:*",
    "start:demo": "budo ./demo/demo.js --dir ./demo/ --live --ssl",
    "start:build": "rollup -c rollup.config.ts -w",
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "shx rm -rf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "docs": "run-s docs:**",
    "docs:0:clean": "shx rm -rf docs",
    "docs:1:main": "typedoc --stripInternal --out docs --target es6 --theme minimal --mode file src",
    "docs:2:demo:1:create-folder": "shx mkdir ./docs/demo/",
    "docs:2:demo:2:index": "shx cp ./demo/index.html ./docs/demo/",
    "docs:2:demo:3:browserify": "browserify ./demo/demo.js > ./docs/demo/demo.js",
    "docs:3:nojekyll": "shx touch ./docs/.nojekyll",
    "test": "karma start --single-run",
    "tdd": "karma start",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            "dist/**.js",
            "dist/**.js.map"
          ]
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs",
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ]
    ]
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth:": 120
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@webcrypto/tools": "^1.1.0",
    "idb": "^5.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jasmine": "^3.5.11",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/node": "^12.12.50",
    "@types/rollup-plugin-json": "^3.0.2",
    "browserify": "^16.5.1",
    "budo": "^11.6.4",
    "colors": "^1.3.2",
    "commitizen": "^4.1.2",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^1.0.1",
    "jasmine-core": "^3.5.0",
    "karma": "^5.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-jasmine": "^3.3.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-typescript": "^5.0.3",
    "lint-staged": "^8.0.0",
    "lodash.camelcase": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.14.3",
    "prompt": "^1.0.0",
    "rollup": "^2.21.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-typescript2": "^0.27.1",
    "semantic-release": "^17.1.1",
    "shelljs": "^0.8.3",
    "shx": "^0.3.2",
    "ts-node": "^8.10.2",
    "tsify": "^4.0.2",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.6"
  }
}
